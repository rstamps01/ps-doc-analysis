# Enhanced Information Validation Tool - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
FLASK_ENV=production
FLASK_APP=src/main.py
PORT=5000

# Google API Configuration
# Obtain these from Google Cloud Console
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/google-service-account.json
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here
GOOGLE_DRIVE_API_KEY=your_google_drive_api_key_here

# OpenAI API Configuration (if using AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Database Configuration (for future PostgreSQL upgrade)
# DATABASE_URL=postgresql://validation_user:secure_password_123@database:5432/validation_tool
DATABASE_URL=sqlite:///data/validation_tool.db

# Redis Configuration (for future caching)
# REDIS_URL=redis://redis:6379/0

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/validation_tool.log

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=pdf,xlsx,docx,csv

# Validation Configuration
DEFAULT_PASS_THRESHOLD=80
DEFAULT_WARNING_THRESHOLD=60
MAX_VALIDATION_TIME=300  # 5 minutes

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,Accept

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Performance Configuration
WORKERS=4
THREADS=2
TIMEOUT=30

# Development Configuration (set to false in production)
DEBUG=false
TESTING=false

